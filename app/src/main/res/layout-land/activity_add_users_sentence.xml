<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.typingapp.AddUsersSentenceActivity">

    <EditText
        android:id="@+id/addSentenceEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="追加したい文・単語"
        android:inputType="textEmailAddress"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addHowReadingEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="半角英数字(a~z,-)"
        android:inputType="textEmailAddress"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintLeft_toLeftOf="@+id/addSentenceEditText"
        app:layout_constraintRight_toRightOf="@+id/addSentenceEditText"
        app:layout_constraintTop_toBottomOf="@+id/ErrorSentenceTextView"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp" />

    <Button
        android:id="@+id/addSentenceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="追加する"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toRightOf="@+id/addSentenceEditText"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/watchDatabaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="データベースを見る"
        app:layout_constraintLeft_toLeftOf="@+id/addSentenceButton"
        app:layout_constraintRight_toRightOf="@+id/addSentenceButton"
        app:layout_constraintTop_toBottomOf="@+id/addSentenceButton"
        app:layout_constraintHorizontal_bias="0.532"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp" />

    <TextView
        android:id="@+id/ErrorSentenceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:text=""
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintLeft_toLeftOf="@+id/addSentenceEditText"
        app:layout_constraintRight_toRightOf="@+id/addSentenceEditText"
        app:layout_constraintTop_toBottomOf="@+id/addSentenceEditText" />

    <TextView
        android:id="@+id/ErrorHowReadingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text=""
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintLeft_toLeftOf="@+id/addHowReadingEditText"
        app:layout_constraintRight_toRightOf="@+id/addHowReadingEditText"
        app:layout_constraintTop_toBottomOf="@+id/addHowReadingEditText" />

    <Spinner
        android:id="@+id/addGenreSpinner"
        android:layout_width="259dp"
        android:layout_height="25dp"
        android:layout_marginTop="36dp"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ErrorHowReadingTextView" />

</android.support.constraint.ConstraintLayout>
