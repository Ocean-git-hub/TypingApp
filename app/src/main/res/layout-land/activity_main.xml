<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.typingapp.MainActivity">

    <Button
        android:id="@+id/startTypingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="start"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="41dp"
        app:layout_constraintLeft_toRightOf="@+id/inputTimesEditText"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.424" />

    <Button
        android:id="@+id/addSentenceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="文字を追加する"
        app:layout_constraintLeft_toLeftOf="@+id/watchDatabaseButton"
        app:layout_constraintRight_toRightOf="@+id/watchDatabaseButton"
        app:layout_constraintTop_toBottomOf="@+id/watchDatabaseButton"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="0.3" />

    <Button
        android:id="@+id/watchDatabaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="データベースを見る"
        app:layout_constraintLeft_toLeftOf="@+id/startTypingButton"
        app:layout_constraintRight_toRightOf="@+id/startTypingButton"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/startTypingButton"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp" />

    <EditText
        android:id="@+id/inputTimesEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="回数を入力"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="41dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.122" />

    <EditText
        android:id="@+id/characterNumberEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="文字数を入力"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/inputTimesEditText"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="-16dp"
        app:layout_constraintLeft_toLeftOf="@+id/inputTimesEditText"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/inputTimesEditText" />

    <Spinner
        android:id="@+id/genreSpinner"
        android:layout_width="236dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toLeftOf="@+id/characterNumberEditText"
        app:layout_constraintRight_toRightOf="@+id/characterNumberEditText"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/characterNumberEditText"
        app:layout_constraintHorizontal_bias="0.631"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp" />

</android.support.constraint.ConstraintLayout>
